<!DOCTYPE html>
<html>
  <head>
    <title>Ssystem</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>



  <body>
    <% unless current_page?(root_path) %>
      <% if boss_signed_in? %>
        <header class="boss_header">
          <div class="header-content">
            <%= link_to "Ssystem", root_path, class: "logo" %>
            <ul class="flex">
              <li></li>
              <li><%= link_to "受諾一覧", bosses_requests_index_path %></li>
              <li><%= link_to "log out", destroy_boss_session_path, method: :delete %></li>
            </ul>
          </div>
        </header>
      <% elsif worker_signed_in? %>
        <header class="worker_header">
          <div class="header-content">
            <%= link_to "Ssystem", root_path, class: "logo" %>
            <ul class="flex">
              <p>ようこそ、<%= current_worker.full_name %>さん!</p>
              <%# binding.irb %>
              <% if @workingtime.nil? %>
                <li>今日は勤務ありません</li>
              <% elsif @workingtime.open_at.present? %>
                <li><%= link_to "退勤", workers_worker_working_times_leaving_path(current_worker.id) %></li>
              <% else %>
                <li><%= link_to "出勤", workers_worker_working_times_attendance_path(current_worker.id) %></li>
              <% end %>

              <li><%= link_to "残業申請", workers_worker_working_times_path(current_worker.id) %></li>
              <li><%= link_to "log out", destroy_worker_session_path, method: :delete %></li>
            </ul>
          </div>
        </header>
      <% end %>
    <% end %>
    <%= yield %>
  </body>
</html>
