<h2 class ="btn btn-primary nav-link mx-2 text-dark">ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="container">
      <div class="form-group row">
        <%= f.label :メールアドレス, class:"col-2 offset-3 col-form-label" %>
        <div class="col-md-5">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :パスワード, class:"col-2 offset-3 col-form-label" %>
        <div class="col-md-5">
          <%= f.password_field :password, autocomplete: "current-password",class:"form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-2 mt-4 offset-5">
          <%= f.submit "ログイン", class:"btn btn-primary btn-block btn-sm" %>
        </div>
      </div>

    </div>
<% end %>
