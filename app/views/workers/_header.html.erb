<header>
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
      <a class="navbar-brand" ><span>Ssystem</span></a>
          <div cass= 'row'>
            <div class="header-name">
              <% if member_signed_in? %>
                <div>ようこそ、<%= current_worker.full_name %>さん!</div>
              <% end %>
            </div>
          </div>


      <div class="collapse navbar-collapse link-light" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <% if workingtime.nil? %>
            <li>今日は勤務ありません</li>
          <% elsif workingtime.open_at.present? %>
            <li><%= link_to "退勤", workers_worker_working_times_leaving_path(current_worker.id) %></li>
          <% else %>
            <li><%= link_to "出勤", workers_worker_working_times_attendance_path(current_worker.id) %></li>
          <% end %>
          <li><%=  %></li>
          <li><%= link_to "残業申請", workers_worker_working_times_path(current_worker.id) %></li>
          <li><%= link_to "log out", destroy_worker_session_path, method: :delete %></li>
        </ul>
      </div>
    </div>
  </nav>
  <div class="mx-auto" style="width: 500px;">
  </div>
</header>